<div class="container-login">
<div class="wrap-login">
<h1 class=subtitles-login-page>Post a Job Listing</h1>
<%= form_with(model: @job, url:jobs_path, class: "subheading-subtitles-posting") do |f| %>
      <%= f.label :company %>
      <%= f.text_field :companyname %>
      <%= f.label :position %>
      <%= f.text_field :position %>
      <%= f.label :description %>
      <br>
      <%= f.text_area :description, size: "28x8" %>
      <br>
      <%= f.label :longitude%>
      <%= f.number_field :longitude %>
      <br>
      <%= f.label :latitude %>
      <%= f.number_field :latitude %>


   <div class="skills-checkboxes">
   <h2 class="smallsubtitle">Choose Required Skill(s)</h2>
      <% @skills.each do |skill|%> 
      <%= check_box_tag "#{skill["name"]}", "yes" %>
      <%= label_tag "#{skill["name"]}" %>
      <% end %>
   </div> 
<br>
<div class="container-login100-form-btn">
  <div class="wrap-login100-form-btn">
  <div class="login100-form-bgbtn"></div>
  <button class="login100-form-btn">   
   <a href="/jobs/"> <%= f.submit "Submit"%> </a>
   </button>
  </div>
  </div>
  </div>
  <% end %>